{
  "host": "127.0.0.1",
  "port": 1636,
  "certificate": "./ssl/cert.pem",
  "key": "./ssl/key.pem",
  "loopbackPath": "./var/ufds.sock",
  "loggers": {
    "appenders": [
      {
        "type": "console"
      }
    ]
  },
  "logLevel": "TRACE",
  "rootDN": "cn=root",
  "rootPassword": "secret",
  "lruCacheSize": 1000,
  "lruCacheAge": 60,
  "trees": {
    "o=smartdc": {
      "blacklistRDN": "cn=blacklist",
      "riak": {
        "bucket": {
          "name": "ufds",
          "props": {
            "n_val": 1,
            "allow_mult": false,
            "last_write_wins": false,
            "r": "all",
            "w": "all",
            "dw": "all",
            "rw": "all"
          }
        },
        "changelogBucket": {
          "name": "ufds_changelog",
          "props": {
            "n_val": 1,
            "allow_mult": false,
            "last_write_wins": false,
            "r": "all",
            "w": "all",
            "dw": 0,
            "rw": "all"
          }
        },
        "uniqueIndexBucket": {
          "name": "ufds_uindex",
          "props": {
            "n_val": 1,
            "allow_mult": false,
            "last_write_wins": false,
            "r": "all",
            "w": "all",
            "dw": 0,
            "rw": "all"
          }
        },
        "indexes": {
          "login": true,
          "email": true,
          "uuid": true,
          "fingerprint": false,
          "_owner": false,
          "company": false,
          "postalcode": false,
          "country": false,
          "city": false,
          "state": false,
          "cn": false,
          "sn": false,
          "uniquemember": false,
          "zone": false
        },
        "client": {
          "url": "http://localhost:8098",
          "clientId": "coal-dev",
          "retry": {
            "retries": 3,
            "factor": 2,
            "minTimeout": 1000,
            "maxTimeout": 10000
          },
          "cache": {
            "size": 100,
            "age": 30
          }
        }
      }
    }
  }
}
