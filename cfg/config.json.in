{
  "host": "HOSTNAME",
  "port": 636,
  "loopbackPath": "/tmp/.smartdc_ufds_loopback_socket",
  "certificate": "/opt/smartdc/ufds/ssl/cert.pem",
  "key": "/opt/smartdc/ufds/ssl/key.pem",
  "loggers": {
    "appenders": [
      {
        "type": "logLevelFilter",
        "level": "DEBUG",
        "appender": {
          "type": "file",
          "filename": "/var/log/ufds/server.log",
          "maxLogSize": 104857600,
          "backups": 3,
          "pollInterval": 60
        }
      },
      {
        "category": "audit",
        "layout": {
          "type": "pattern",
          "pattern": "[%d{yyyy-MM-ddThh:mm:ss.SSSO}] - %m%n"
        },
        "type": "file",
        "filename": "/var/log/ufds/access.log",
        "maxLogSize": 104857600,
        "backups": 10,
        "pollInterval": 10
      }
    ]
  },
  "logLevel": "INFO",
  "rootDN": "ROOTDN",
  "rootPassword": "ROOTPW",
  "lruCacheSize": 1000,
  "lruCacheAge": 60,
  "trees": {
    "o=smartdc": {
      "blacklistRDN": "cn=blacklist",
      "riak": {
        "bucket": {
          "name": "ufds",
          "props": {
            "n_val": 3,
            "allow_mult": false,
            "last_write_wins": false,
            "r": "quorum",
            "w": "quorum",
            "dw": 0,
            "rw": "quorum"
          }
        },
        "uniqueIndexBucket": {
          "name": "ufds_uindex",
          "props": {
            "n_val": 2,
            "allow_mult": false,
            "last_write_wins": false,
            "r": "all",
            "w": "all",
            "dw": 0,
            "rw": "all"
          }
        },
        "changelogBucket": {
          "name": "ufds_changelog",
          "props": {
            "n_val": 3,
            "allow_mult": false,
            "last_write_wins": false,
            "r": "quorum",
            "w": "quorum",
            "dw": 0,
            "rw": "quorum"
          }
        },
        "indexes": {
          "login": true,
          "email": true,
          "uuid": true,
          "fingerprint": false,
          "_owner": false,
          "company": false,
          "postalcode": false,
          "country": false,
          "city": false,
          "state": false,
          "cn": false,
          "sn": false,
          "uniquemember": false,
          "zone": false
        },
        "client": {
          "url": "http://RIAKIP:RIAKPORT",
          "clientId": "ufds",
          "retry": {
            "retries": 3,
            "factor": 2,
            "minTimeout": 1000,
            "maxTimeout": 10000
          },
          "cache": {
            "size": 10000,
            "age": 120
          }
        }
      }
    }
  }
}
